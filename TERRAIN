splash Water
{
	smallclass		WaterSplash
	smallclip		-7
	smallsound		world/watersplashsmall

	baseclass		WaterSplashBase
	chunkclass		WaterSplash
	chunkxvelshift	8
	chunkyvelshift	8
	chunkzvelshift	8
	chunkbasezvel	2
	sound			world/watersplash
}

